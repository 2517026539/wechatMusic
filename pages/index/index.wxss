.banners {
    width: 100%;
    height: 300rpx;
}

.banners image {
    width: 100%;
    height: 100%;
}

/* 图标导航区域 */
.navContainer {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-around;
}

.navItem {
    display: flex;
    flex-direction: column;
}

.icon {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    font-size: 50rpx;
    line-height: 100rpx;
    text-align: center;
    background: rgb(240, 19, 19);
    color: #fff;
    margin: 20rpx 0;
}

.navIten-text {
    text-align: center;
    font-size: 26rpx;
}

/* 推荐歌曲区域 */
.recommendContainer {
    padding: 20rpx;
}

/* 推荐内容区*/
.recommendScroll {
    display: flex;
    height: 300rpx;
}

.scrollItem {
    width: 200rpx;
    height: auto;
}

.scrollItem + .scrollItem {
    margin-left: 20rpx;
}

.scrollItem image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.scrollItem text {
    font-size: 24rpx;
    /* 单行文本溢出*/
    /*display: block;
    /*overflow: hidden;*/
    /*text-overflow: ellipsis;*/
    /*white-space: nowrap;*/
    /* 多行文本溢出*/
    display: -webkit-box;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    line-height: 1.4;
}

/* 排行榜区域 */
.rankContainer {
    padding: 20rpx;
}

.rank-swiper {
    width: 100%;
    height: 400rpx;
    padding-top: 10rpx;
}

.rank-title {
    font-size: 26rpx;
    color: #000;
    margin-bottom: 15rpx;
}

.music-item {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: center;
    width: 96%;
}

.music-item + .music-item {
    padding-top: 15rpx;
}

.music-item image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 10rpx;
}

.music-item .music-index {
    width: 80rpx;
    text-align: center;
}

.music-item .music-name {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    flex: 1;
    padding-right: 10rpx;
    box-sizing: border-box;
}